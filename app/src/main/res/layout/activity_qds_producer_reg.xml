<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QdsProducerRegActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To: National Seed Certification Service:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="15dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin= "5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin= "10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Seed producer:"
                            android:textColor="#000"
                            />

                        <TextView
                            android:id="@+id/seed_producer_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_margin="5dp"
                            android:text="Joseph Kaizzi"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Enter location of farm:"
                            android:textColor="#000"
                            />

                        <EditText
                            android:id="@+id/location_of_farm_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:textSize="14sp"
                            android:inputType="text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Enter Applicant years of experience as a seed grower:"
                            android:textColor="#000"
                            />

                        <EditText
                            android:id="@+id/years_of_experience_as_grower_et_producer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:textSize="14sp"
                            android:inputType="number"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I/We wish to apply for a license to produce certified seed as indicated below:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I/We has/have not been a seed grower in the past and I/We has/have adequate storage facilities to handle the resultant seed."
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin= "5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin= "10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="If you have been a seed grower before, please enter grower's number:"
                            android:textColor="#000"
                            />

                        <EditText
                            android:id="@+id/growers_number_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="0dp"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="The field where I intend to grow the seed crop was previously under (give its cropping history for the last 3 seasons or years) crops/fallows:"
                            android:textColor="#000"
                            />

                        <EditText
                            android:id="@+id/fallows_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="0dp"
                            android:inputType="textMultiLine"/>
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Do you have adequate isolation?"
                            android:textColor="#000"
                            />
                        <Spinner
                            android:id="@+id/adequate_isolation_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginTop="10dp"
                            android:spinnerMode="dropdown"
                            android:entries="@array/status"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Do you have adequate labor to carry out all farm operations in a timely manner?"
                            android:textColor="#000"
                            />
                        <Spinner
                            android:id="@+id/farm_operations_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginTop="10dp"
                            android:spinnerMode="dropdown"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:entries="@array/status"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="3dp"
                            android:text="Are you aware that only seed that meets the minimum standards shall be accepted as certified seed?"
                            android:textColor="#000"
                            />
                        <Spinner
                            android:id="@+id/certified_seed_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginTop="10dp"
                            android:spinnerMode="dropdown"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:entries="@array/status"/>


                    </LinearLayout>
                    <EditText
                        android:id="@+id/date_text_view_producer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="07/14/2020"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_margin="5dp"/>




                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/submit_button_producer"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Submit order"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/save_button_producer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:text="Save order"
                    style="@style/Button"/>

            </LinearLayout>
            <Button
                android:id="@+id/cancel_btn_producer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                style="@style/Button_Cancel"
                android:text="Cancel Order"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>