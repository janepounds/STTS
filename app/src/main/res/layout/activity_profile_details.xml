<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".ProfileDetails">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_height="0dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic_imageView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/defavator"
            android:layout_marginTop="3dp"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            app:civ_border_color="#FF000000"
             />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        app:srcCompat="@drawable/account" />

                    <TextView
                        android:id="@+id/profile_name_textView"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttonEditfName"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".5"
                        android:onClick="buttonClickedEditName"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/account" />


                    <TextView
                        android:id="@+id/profile_surname_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Last Name"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/buttonEditSurname"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".5"
                        android:onClick="buttonClickedEditSurname"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:id="@+id/profile_phoneno_textView"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="Phone"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/buttonEditPhoneNo"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".5"
                        android:onClick="buttonClickedEditPhoneNo"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/email" />

                    <TextView
                        android:id="@+id/textViewEmailAdress"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="Email Address"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/buttonEditemail"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".5"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        app:srcCompat="@drawable/map_marker_off" />

                    <TextView
                        android:id="@+id/profile_district_textView"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="District"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/buttonEditDistrict"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:onClick="buttonClickedEditDistrict"
                        android:layout_marginBottom="1dp"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        app:srcCompat="@drawable/map_marker_off" />


                    <TextView
                        android:id="@+id/profile_village_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Village"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/buttonEditVillage"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:onClick="buttonClickedEditVillage"
                        android:layout_marginBottom="1dp"
                        android:drawableRight="@drawable/pencil" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/lightGrey"
                    android:layout_marginBottom="3dp"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        app:srcCompat="@drawable/cloud_download" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/saved_forms_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Saved Forms"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/saved_forms_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepOrange"
                            android:text="Check Saved Forms"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        app:srcCompat="@drawable/account_cog" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/saved_change_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:text="Settings"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/chang_pw"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deepOrange"
                            android:text="Change password"
                            android:onClick="changePassword"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">


    </LinearLayout>
</LinearLayout>