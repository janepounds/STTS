<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EgsSeedOrders"
    android:padding="15dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select Crop:"
            android:textSize="16sp"
            android:gravity="center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="0.6"
            android:ems="10"
            android:spinnerMode="dropdown" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select Crop/Seed Variety:"
            android:textSize="16sp"
            android:gravity="center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="0.6"
            android:ems="10"
            android:spinnerMode="dropdown" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select Seed Class:"
            android:textSize="16sp"
            android:gravity="center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="0.6"
            android:ems="10"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select Inventory Status:"
            android:textSize="16sp"
            android:gravity="center"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="0.6"
            android:ems="10"
            android:spinnerMode="dropdown" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Enter Quantity Ordered:"
            android:textSize="16sp"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Submit order"
                android:textAllCaps="false"
                style="@style/Button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Save order"
                android:textAllCaps="false"
                style="@style/Button"/>

        </LinearLayout>
        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            style="@style/Button"
            android:text="Cancel Order"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>
</ScrollView>